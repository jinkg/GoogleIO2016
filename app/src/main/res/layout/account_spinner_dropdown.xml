<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:minHeight="?android:listPreferredItemHeightSmall"
    android:orientation="horizontal"
    android:padding="@dimen/action_button_padding">

    <com.yalin.googleio2016.ui.widget.BezelImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/navdrawer_item_icon_size"
        android:layout_height="@dimen/navdrawer_item_icon_size"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        app:maskDrawable="@drawable/circle_mask"
        app:srcCompat="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/profile_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/action_button_padding"
        android:textColor="@color/body_text_2"
        android:textSize="@dimen/text_size_medium" />
</LinearLayout>