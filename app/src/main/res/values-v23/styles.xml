<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GoogleIO.Light" parent="Theme.GoogleIO.WithNavDrawer">
        <item name="colorPrimaryDark">@color/light_status_bar_against_toolbar</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GoogleIO.Welcome" parent="Theme.GoogleIO.Welcome.Base">
        <item name="android:statusBarColor">@color/light_status_bar_against_toolbar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/welcome_nav_bar</item>
    </style>

    <style name="Theme.GoogleIO.ExploreSessions" parent="Theme.GoogleIO.Light">
        <item name="colorPrimaryDark">@color/light_status_bar_against_header_img</item>
        <item name="android:windowEnterTransition">@transition/fade_system_chrome</item>
    </style>

    <style name="Theme.GoogleIO.SessionDetails" parent="Theme.GoogleIO.SessionDetails.VersionBase">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/immersive_light_status_bar</item>
    </style>

</resources>